<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:background="@drawable/dialog_background"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_background_header"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="10dp"
            android:scaleType="centerInside"
            android:layout_marginTop="5dp"
            android:layout_centerVertical="true"
            android:src="@drawable/edit_icon"/>

        <TextView
            android:id="@+id/nameHabit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name habit"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold" />

    </LinearLayout>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/numEditForHabit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/numEditForHabit" />

        <TextView
            android:id="@+id/numOfHabit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/textView" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="time"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/numOfHabit" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <LinearLayout
            android:id="@+id/layout_plus_icon"
            android:layout_width="50dp"
            android:gravity="center"
            android:background="#7BAFD7"
            android:layout_height="45dp">
            <ImageView
                android:id="@+id/plusIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="centerInside"
                android:backgroundTint="@color/white"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_plus"/>
        </LinearLayout>


        <EditText
            android:id="@+id/numOfHabitEditText"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_toEndOf="@+id/layout_plus_icon"
            android:inputType="number"
            android:textAlignment="center"
            android:layout_centerVertical="true" />
        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:gravity="center"
            android:background="#7BAFD7"
            android:layout_toEndOf="@+id/numOfHabitEditText">
            <ImageView
                android:id="@+id/minusIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="centerInside"
                android:layout_centerVertical="true"

                android:src="@drawable/ic_minus"/>
        </LinearLayout>


    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center">
        <TextView
            android:id="@+id/cancelButton"
            android:background="@drawable/icon_border"
            android:layout_width="150dp"
            android:textAlignment="center"
            android:layout_height="30dp"
            android:textSize="20dp"
            android:text="Cancel"/>
        <TextView
            android:id="@+id/okButton"
            android:background="@drawable/icon_border"
            android:layout_marginStart="5dp"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:textAlignment="center"
            android:textSize="20dp"
            android:text="Ok"/>
    </LinearLayout>
</LinearLayout>